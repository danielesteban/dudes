{
  "name": "water",
  "author": "Daniel Esteban Nombela",
  "license": "MIT",
  "private": true,
  "watch": {
    "make": "core/voxels.c"
  },
  "scripts": {
    "make": "sh core/make.sh",
    "cert": "openssl req -x509 -newkey rsa:2048 -nodes -sha256 -subj /CN=localhost -keyout localhost-key.pem -out localhost-cert.pem",
    "postinstall": "npm run cert",
    "serve": "sirv --dev --single --host 0.0.0.0 --cert localhost-cert.pem --key localhost-key.pem --http2 .",
    "watch": "npm-watch",
    "start": "run-p serve watch"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.9.0",
    "sirv-cli": "^1.0.11"
  }
}
